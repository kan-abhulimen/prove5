<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.helpingfeets.prove5.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorite Scriptures"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Enter The Book"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        />

    <EditText android:id="@+id/book"
        android:layout_width="356dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Enter The Chapter"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        />

    <EditText android:id="@+id/chapter"
        android:layout_width="357dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Enter The Verse"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        />

    <EditText android:id="@+id/verse"
        android:layout_width="360dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="submitScripture"
        android:text="Submit" />

    Intent intent = new Intent(activity.this, activity1.class);

</LinearLayout>
